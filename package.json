{
  "name": "mcp-api-gateway",
  "version": "1.0.0",
  "description": "Universal MCP server for API integration with Claude Desktop",
  "main": "index.js",
  "type": "module",
  "scripts": {
  "start": "node index.js",
  "dev": "nodemon index.js",
  "test": "node --test",
  "docker:build": "docker build -t mcp-api-gateway .",
  "docker:run": "docker run --rm -it mcp-api-gateway",
  "migrate": "node ./scripts/migrate.js up",
  "migrate:down": "node ./scripts/migrate.js down",
  "migrate:status": "node ./scripts/migrate.js status",
  "start:with-migrations": "sh ./scripts/start.sh",
  "seed": "node ./scripts/seed.js",
  "seed:dev": "node ./scripts/seed.js development",
  "seed:prod": "node ./scripts/seed.js production",
  "switch-env": "node ./scripts/switch-env.js",
  "switch-env:ps": "powershell -ExecutionPolicy Bypass -File ./scripts/switch-env.ps1",
  "validate-env": "node ./scripts/validate-env.js",
  "list-envs": "node ./scripts/list-envs.js"
  },
  "keywords": [
    "mcp",
    "claude",
    "api-gateway",
    "swagger",
    "openapi",
    "model-context-protocol"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-api-gateway.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "umzug": "^3.1.0",
    "axios": "^1.6.7",
    "js-yaml": "^4.1.0",
    "maskdata": "^1.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "zod": "^3.21.4",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
