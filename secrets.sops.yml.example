# Mount point for MCP API Gateway stack configuration

# Vault configuration
vault:
  addr: ${VAULT_ADDR}  # Required for production
  role_id: ${VAULT_ROLE_ID}  # AppRole auth (recommended)
  secret_id: ${VAULT_SECRET_ID}

# Database connection (change host/port as needed)
database:
  url: postgresql://postgres:${DB_PASSWORD}@db:5432/postgres
  password: ${DB_PASSWORD}

# Supabase configuration
supabase:
  url: ${SUPABASE_URL}
  anon_key: ${SUPABASE_ANON_KEY}
  service_role_key: ${SUPABASE_SERVICE_ROLE_KEY}

# Model API keys
anthropic:
  api_key: ${ANTHROPIC_API_KEY}
  model: claude-2.1
  temperature: 0.7
  max_tokens: 4096

# Security configuration
jwt:
  secret: ${JWT_SECRET}
  expiry: 24h

# Service configurations
sentry:
  dsn: https://xxx@sentry.io/123
  environment: production

# Note: Values prefixed with ${} will be replaced from GitHub secrets or Vault
# Before committing:
# 1. Make sure no actual secrets are included - use ${} placeholders
# 2. Encrypt with SOPS: sops -e secrets.sops.yml > secrets.sops.yml.enc
# 3. Delete the unencrypted file
# 4. Git add only the encrypted file: git add secrets.sops.yml.enc