# Production environment variables
NODE_ENV=production

# Database Configuration - Use Docker secrets in production
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=postgres_prod
POSTGRES_USER=postgres_prod
# POSTGRES_PASSWORD is stored in Docker secrets

# API Configuration
API_PORT=3000
KONG_ADMIN_URL=http://kong:8001

# Claude/Anthropic Configuration - Production
# ANTHROPIC_API_KEY is stored in Docker secrets
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_TOKENS=200000

# Logging
LOG_LEVEL=info
REQUEST_LOGGING=true
DETAILED_ERRORS=false

# CORS Settings
CORS_ENABLED=true
ALLOWED_ORIGINS=https://api.yourdomain.com

# Security
TLS_ENABLED=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_FILTERING=true